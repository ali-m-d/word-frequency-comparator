<header>
  <div class="header">
    <div class="container">
      <div class="d-flex flex-row justify-content-between">
        <a href="#" class="pb-3 pt-3">
          <div class="d-flex flex-row align-items-center">
            <div>
              <img src="<%= asset_path("doc.png") %>" height="40" width="40" class="align-top">
            </div>
            <div class="main-heading px-1 flex-sm-column">
              <div>
                <span class="green">Word</span><span class="white">Frequency</span><span class="green">Comparator</span>
              </div>
            </div>
          </div>
        </a>
        <div class="login d-flex flex-row pt-2">
          <% if logged_in? %>
              <div class="d-none d-md-block">
                <span class="green">Logged in as </span><span class="white"><%= current_user.username %></span>
              </div>
              <div class="d-none d-md-block">
                <%= link_to "Logout", logout_path, method: :delete, class: "ml-1 logout-btn" %> 
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</header>