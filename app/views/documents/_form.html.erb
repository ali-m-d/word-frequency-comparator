<div id="documentModal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-lg" role="content">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Add Document</h4>
        <button type="button" id="test" class="close" data-dismiss="modal">
            &times;
        </button>
      </div>
      <div class="modal-body">
        <%= form_for([@folder, @folder.documents.new], :remote => true) do |f| %>
          <div class="field">
            <%= f.label :title, class: "col-12 col-sm-1" %>
            <%= f.text_field :title, class: "col-12 col-sm-8 offset-1" %>
          </div>
          <div class="field">
            <%= f.label :url, "URL", class: "col-12 col-sm-1" %>
            <%= f.text_field :url, class: "col-12 col-sm-8 offset-1" %>
          </div>
          <div class="field">
            <%= f.label :pdf, "PDF", class: "col-12 col-sm-2" %>
            <%= f.label :pdf, "Upload File", class: "col-12 col-sm-3 styled-btn" %>
            <%= f.file_field :pdf %>
            <div id="fileup" class="col-12 col-sm-8 offset-2"></div>
          </div>
          <div class="actions col-12 col-sm-1">
            <%= f.submit "Add document", id: "submitFor#{ @folder.id}", class: "styled-btn" %>
          </div>
        <% end %>
      </div> <!-- end of modal body -->
    </div> <!-- end of modal content -->
  </div> <!-- end of dialog -->
</div> <!-- end of modal -->