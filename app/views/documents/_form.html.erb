<div id="documentModal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-lg" role="content">
    <div class="modal-content rounded-0 border-0">
      <div class="modal-header rounded-0">
        <h4 class="modal-title">Add Document</h4>
        <button type="button" id="test" class="close" data-dismiss="modal">
            &times;
        </button>
      </div>
      <div class="modal-body">
        <%= form_for([@folder, @folder.documents.new], remote: true, autocomplete: "off") do |f| %>
          <div>
            <div class="mb-4">The text of a document can be scraped from a webpage referenced by a URL or a PDF uploaded from local storage</div>
          </div>
          <div class="d-flex flex-sm-row flex-column" id="title">
            <%= f.label :title, class: "my-0", style: "width: 3rem;" %>
            <%= f.text_field :title, class: "styled-input flex-grow-1" %>
          </div>
          <div class="errors title-errors text-right"></div>
          <div class="d-flex flex-sm-row flex-column my-2" id="url">
            <%= f.label :url, "URL", class: "my-0", style: "width: 3rem;" %>
            <%= f.text_field :url, class: "styled-input flex-grow-1" %>
          </div>
          <div class="errors url-errors text-right"></div>
          <div class="d-flex flex-sm-row flex-column my-2" id="pdf">
            <%= f.label :pdf, "PDF", class: "my-0", style: "width: 3rem;" %>
            <div class="d-flex flex-column">
              <%= f.label :pdf, "Upload File", class: "styled-btn mb-0" %>
              <%= f.file_field :pdf %>
              <div id="fileup" class=""></div>
              <div class="errors pdf-errors"></div>
            </div>
          </div>
          <div class="d-flex flex-row justify-content-end">
            <%= f.submit "Add document", id: "submitFor#{ @folder.id}", class: "styled-btn my-1", data: {disable_with: "Adding..."} %>
          </div>
        <% end %>
      </div> <!-- end of modal body -->
    </div> <!-- end of modal content -->
  </div> <!-- end of dialog -->
</div> <!-- end of modal -->