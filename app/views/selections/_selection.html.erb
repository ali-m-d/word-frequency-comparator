<div>
    <div class="d-flex flex-row justify-content-end pt-1">
      <%= link_to "Back to Folders", folders_url, class: "link" %>
    </div>
    <% if selection.word %>
        <div class="sub-heading">
            Results of Comparison
        </div>
        <div>
            <% selection.selectees_json.each do |selectee|  %>
                <p>
                    The word "<%= selection.word %>" appears a total of
                    <%= pluralize(selectee["tally"], 'time') %> in the documents
                    contained in "<%= selectee["name"] %>"
                </p>
            <% end %>
        </div>
        <br>
    <% end %>
</div>