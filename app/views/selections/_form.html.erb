<div id="selectionModal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-lg" role="content">
    <div class="modal-content rounded-0 border-0">
      <div class="modal-header rounded-0">
        <h4 class="modal-title">Enter Word</h4>
        <button type="button" class="close" data-dismiss="modal">
            &times;
        </button>
      </div>
      <div class="modal-body">
        <%= form_for(@selection, :remote => true, autocomplete: "off") do |f| %>
          <div class="d-flex flex-sm-row flex-column">
            <%= f.label :word, class: "my-0", style: "width: 3rem;" %>
            <%= f.text_field :word, class: "styled-input flex-grow-1" %>
          </div>
          <div class="d-flex flex-row justify-content-end">
            <%= f.submit "Proceed to comparison", id: "submitFor#{@selection.id}", class: "styled-btn mt-2", data: {disable_with: "Comparing..."}, style: "width: 12rem;" %>
          </div>
        <% end %>
      </div> <!-- end of modal body -->
    </div> <!-- end of modal content -->
  </div> <!-- end of dialog -->
</div> <!-- end of modal -->
