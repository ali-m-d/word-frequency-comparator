<div id="userModal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-lg" role="content">
    <div class="modal-content rounded-0 border-0">
      <div class="modal-header rounded-0">
        <h4 class="modal-title">Register</h4>
        <button type="button" id="test" class="close" data-dismiss="modal">
            &times;
        </button>
      </div>
      <div class="modal-body">
        <%= form_for(:user, url: users_path, remote: true, autocomplete: "off") do |f| %>
          <div class="d-flex flex-sm-row flex-column">
              <label for="user_username" class="my-0" style="width: 5rem;">Username</label>
              <input autocomplete="off" type="text" class="styled-input flex-grow-1" name="user[username]" id="user_username" placeholder="username">
          </div>
          <div class="d-flex flex-sm-row flex-column my-2">
              <label for="user_password" class="my-0" style="width: 5rem;">Password</label>
              <input autocomplete="off" type="password" class="styled-input flex-grow-1" name="user[password]" id="user_password" placeholder="password">
          </div>
          <div class="d-flex flex-row justify-content-center">
              <input type="submit" class="styled-btn my-2" value="Register">
          </div>
        <% end %>
      </div> <!-- end of modal body -->
    </div> <!-- end of modal content -->
  </div> <!-- end of dialog -->
</div> <!-- end of modal -->
