$('.delete-folder').bind('ajax:success', function() {
    var folderId = '#' + $(this).attr("id")
    console.log("folder to be deleted: " + folderId);
    $(folderId).fadeOut(500, function() {
        $(this).remove();
    });
    $('.alert-text').text("Folder successfully deleted");
    $('.alert-text').fadeIn();
});

