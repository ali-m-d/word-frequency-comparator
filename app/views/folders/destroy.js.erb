$('.delete-folder').bind('ajax:success', function() {
    let folderId = '#' + $(this).attr("id");
    
    var newSelectees = selectees.filter(s => s !== $(this).attr('id'));
    selectees = newSelectees;
            
    $(folderId).fadeOut(500, function() {
        $(this).remove();
    });
    $('.alert-text').text("Folder successfully deleted");
    $('.alert-text').fadeIn();
});

