<div id="folderModal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-lg" role="content">
    <div class="modal-content rounded-0 border-0">
      <div class="modal-header rounded-0">
        <h4 class="modal-title">Add Folder</h4>
        <button type="button" class="close" data-dismiss="modal">
            &times;
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(model: folder, id: "newFolderForm", autocomplete: "off") do |form| %>
          <div class="d-flex flex-sm-row flex-column" id="name">
            <%= form.label :name, class: "my-0", style: "width: 3rem;" %>
            <%= form.text_field :name, class: "styled-input flex-grow-1" %>
          </div>
          <div class="text-right errors name-errors"></div>
          <div class="d-flex flex-row justify-content-end">
            <%= form.submit nil, class: "styled-btn mt-2" %>
          </div>
        <% end %>
      </div> <!-- end of modal body -->
    </div> <!-- end of modal content -->
  </div> <!-- end of dialog -->
</div> <!-- end of modal -->
